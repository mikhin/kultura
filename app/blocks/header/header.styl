.header
	position relative
	display block
	padding-top 40px
	padding-bottom 30px

	@media (min-width: $desktopWidth)
		padding-top 60px
		padding-bottom 47px

.header__logo
	text-align center
	width 146px
	margin 0 auto

	@media (min-width: $desktopWidth)
		margin-bottom 46px
		width auto

.header__menu
	position absolute
	top 0
	left 0

	@media (min-width: $desktopWidth)
		position static

