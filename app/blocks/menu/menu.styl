.menu__list
	flex-direction column

	@media (min-width: $desktopWidth)
		display flex
		flex-direction row
		background-color transparent
		position static
		justify-content space-between

.menu__item-content
	font-size 16px
	line-height 19px
	letter-spacing 2px
	color $black
	text-decoration none
	text-transform uppercase
	transition color .3s
	display block
	padding 18px 16px
	text-align center

	@media (min-width: $desktopWidth)
		font-size 15px
		line-height 18px
		background-color transparent
		padding 0

	&:hover, &:focus
		color $gray

.menu_adaptive
	.menu__handler
		font-size 0
		border none
		position absolute
		top 0
		left 0
		display block
		width 50px
		height 50px
		background-color $accent
		background-image url('/assets/images/menu__handler.svg')
		background-repeat no-repeat
		background-position center

		@media (min-width: $desktopWidth)
			display none

		&:hover, &:focus
			background-color $black

	.menu__item
		&:not(:last-child)
			margin-bottom 20px

			@media (min-width: $desktopWidth)
				margin-bottom 0

	.menu__item-content
		background-color $lightGray
		text-align left

		@media (min-width: $desktopWidth)
			background-color transparent

	.menu__list
		display none
		background-color $white

		@media (min-width: $desktopWidth)
			display flex

	&.menu_opened
		background-color $white
		position fixed
		z-index 1
		height 100%
		width 100%
		overflow-y scroll
		-webkit-overflow-scrolling touch

		@media (min-width: $desktopWidth)
			background-color transparent
			position static
			height auto
			width auto
			overflow-y auto

		.menu__list
			display flex
			position absolute
			top 76px
			left 0
			right 0
			bottom 0

		.menu__handler
			background-color transparent
			background-image url('/assets/images/menu__handler--opened.svg')

			&:hover, &:focus
				background-color transparent
				opacity .5
