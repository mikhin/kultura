.menu__handler
	font-size 0
	border none
	position absolute
	top 0
	left 0
	display block
	width 50px
	height 50px
	background-color $accent
	background-image url('/assets/images/menu__handler.svg')
	background-repeat no-repeat
	background-position center

	@media (min-width: $desktopWidth)
		display none

	&:hover, &:focus
		background-color $black

.menu__list
	display none
	justify-content space-between
	flex-direction column
	background-color $white
	position absolute
	top 76px
	left 0
	right 0
	bottom 0

	@media (min-width: $desktopWidth)
		display flex
		flex-direction row
		background-color transparent
		position static

.menu__item
	&:not(:last-child)
		margin-bottom 20px

		@media (min-width: $desktopWidth)
			margin-bottom 0

.menu__item-content
	font-size 16px
	line-height 19px
	letter-spacing 2px
	color $black
	text-decoration none
	text-transform uppercase
	transition color .3s
	background-color $lightGray
	display block
	padding 18px 16px

	@media (min-width: $desktopWidth)
		font-size 15px
		line-height 18px
		background-color transparent
		padding 0

	&:hover, &:focus
		color $gray


.menu_opened
	background-color $white
	position fixed
	z-index 1
	height 100%
	width 100%
	overflow-y scroll
	-webkit-overflow-scrolling touch

	@media (min-width: $desktopWidth)
		background-color transparent
		position static
		height auto
		width auto
		overflow-y auto

	.menu__list
		display flex

	.menu__handler
		left auto
		right 0
		background-color transparent
		background-image url('/assets/images/menu__handler--opened.svg')

		&:hover, &:focus
			background-color transparent
			opacity .5
