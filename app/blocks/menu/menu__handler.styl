.menu__handler
	font-size 0
	border none
	position absolute
	top 0
	left 0
	display block
	width 50px
	height 50px
	background-color $accent
	background-image url('/assets/images/menu__handler.svg')
	background-repeat no-repeat
	background-position center

	@media (min-width: $desktopWidth)
		display none

	&:hover, &:focus
		background-color $black


