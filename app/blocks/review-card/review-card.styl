.review-card__link
	color $black
	text-decoration none
	display flex
	flex-direction column

	&:hover, &:focus
		.review-card__title
			color $accent

.review-card__title
	transition color .3s
	font-family 'Playfair Display', 'Times New Roman', serif
	font-weight 900
	font-size 23px
	line-height 31px
	margin-bottom 10px

.review-card__summary
	font-family 'Raleway', Arial, sans-serif
	font-size 14px
	line-height 21px
	color $black

.review-card__description
	order 1

.review-card__image
	margin-bottom 15px

	@media (min-width: $desktopWidth)
		margin-bottom 20px

