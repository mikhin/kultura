.review-list
	display block

.review-list__title
	font-weight bold
	font-size 17px
	line-height 20px
	letter-spacing 2px
	color #000000
	text-transform uppercase
	margin-bottom 15px

.review-list__list
	@media (min-width: $desktopWidth)
		display grid
		grid-template-columns repeat(2, 1fr)
		grid-gap 30px
		grid-row-gap 38px

.review-list__item
	&:not(:last-child)
		margin-bottom 30px

		@media (min-width: $desktopWidth)
			margin-bottom 0

.review-list__item-link
	color $black
	text-decoration none
	display flex
	flex-direction column

	&:hover, &:focus
		.review-list__item-title
			color $accent

.review-list__item-title
	font-family 'Playfair Display', 'Times New Roman', serif
	font-weight 900
	font-size 23px
	line-height 31px
	margin-bottom 10px

.review-list__item-summary
	font-family 'Raleway', Arial, sans-serif
	font-size 14px
	line-height 21px
	color $black

.review-list__item-description
	order 1

.review-list__item-image
	margin-bottom 15px

	@media (min-width: $desktopWidth)
		margin-bottom 20px

